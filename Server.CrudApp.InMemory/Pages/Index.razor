@page "/"
@page "/employees"
@inherits IndexBase
@inject NavigationManager NavigationManager

<h1>Employees Management</h1>
<hr class="mb-3">


<div class="row">
    <div class="col-3 offset-9 text-right mb-5">
        <button class="btn btn-success" @onclick="@( () => NavigationManager.NavigateTo("employees/create") )">
            Create
        </button>
    </div>
</div>



@if (Employees == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Employed Region</th>
                        <th>Rank</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Employees)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.FirstName</td>
                            <td>@employee.LastName</td>
                            <td>@employee.Email</td>
                            <td>@employee.EmployedRegion</td>
                            <td>@employee.Rank.Name</td>
                            <td class="text-right pr-0">
                                <button class="btn btn-outline-primary" @onclick="@( () => NavigationManager.NavigateTo($"employees/edit/{employee.Id}") )">
                                    Edit
                                </button>
                                <button class="btn btn-outline-danger ml-2" @onclick="@( () => NavigationManager.NavigateTo($"employees/delete/{employee.Id}") )">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
